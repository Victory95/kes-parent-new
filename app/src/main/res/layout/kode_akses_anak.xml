<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.KodeAksesAnak"
    tools:ignore="Autofill,LabelFor,ContentDescription">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_close"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_uncheck_white"
            android:layout_width="55dp"
            android:layout_height="55dp" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:text="@string/tv_kode_aa_label"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <com.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            app:shape_circle_borderColor="@color/colorPrimary"
            app:shape_circle_borderWidth="0.5dp"
            android:id="@+id/profilanak">

            <ImageView
                android:id="@+id/iv_foto_profile"
                android:src="@drawable/ic_face"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:ignore="ContentDescription" />

        </com.github.florent37.shapeofview.shapes.CircleView>


    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:text="@string/tv_kode_aa_info"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tv_kode_akses_anak_sekolah"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_kode_akses_anak_nama"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <LinearLayout
            android:id="@+id/lay_txt"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="42dp">

            <EditText
                android:layout_margin="2dp"
                android:background="@drawable/rectangel_white"
                android:gravity="center"
                android:id="@+id/editTextone"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:cursorVisible="false"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:maxLength="1"
                android:nextFocusRight="@id/editTexttwo"
                >

                <requestFocus />
            </EditText>
            <EditText
                android:layout_margin="2dp"
                android:background="@drawable/rectangel_white"
                android:gravity="center"
                android:id="@+id/editTexttwo"
                android:layout_width="35dp"
                android:cursorVisible="false"
                android:layout_height="42dp"
                android:textColor="@android:color/white"
                android:inputType="numberDecimal"
                android:maxLength="1"/>
            <EditText
                android:layout_margin="2dp"
                android:background="@drawable/rectangel_white"
                android:gravity="center"
                android:id="@+id/editTextthree"
                android:layout_width="35dp"
                android:cursorVisible="false"
                android:layout_height="42dp"
                android:textColor="@android:color/white"
                android:inputType="numberDecimal"
                android:maxLength="1"/>
            <EditText
                android:layout_margin="2dp"
                android:background="@drawable/rectangel_white"
                android:gravity="center"
                android:id="@+id/editTextfour"
                android:layout_width="35dp"
                android:cursorVisible="false"
                android:layout_height="42dp"
                android:textColor="@android:color/white"
                android:inputType="numberDecimal"
                android:maxLength="1"/>
            <EditText
                android:layout_margin="2dp"
                android:background="@drawable/rectangel_white"
                android:gravity="center"
                android:id="@+id/editTextfive"
                android:layout_width="35dp"
                android:cursorVisible="false"
                android:layout_height="42dp"
                android:textColor="@android:color/white"
                android:inputType="numberDecimal"
                android:maxLength="1"/>
            <EditText
                android:layout_margin="2dp"
                android:background="@drawable/rectangel_white"
                android:gravity="center"
                android:id="@+id/editTextsix"
                android:cursorVisible="false"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:textColor="@android:color/white"
                android:inputType="numberDecimal"
                android:maxLength="1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_copy_paste"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-40dp"
            android:layout_toEndOf="@id/lay_txt"
            android:padding="10dp"
            android:src="@drawable/ic_copy_paste" />
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_val_kode_aa"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="@string/validate_kode_aa"
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_kirim_kode_otp_lagi"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/ic_logo_background"
        android:id="@+id/kirim_kode"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/btn_submit"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rectangle"
        android:backgroundTint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>