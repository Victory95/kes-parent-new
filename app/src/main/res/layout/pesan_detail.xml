<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Anak.PesanDetail"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pesan_detail"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:shrinkColumns="1"
                android:stretchColumns="1">
                <!-- Row 3 with 2 columns -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:text="@string/tv_tanggal"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:id="@+id/tanggal"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:text="@string/tv_sekolah"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:id="@+id/sekolah"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:text="@string/tv_dibuat_oleh"
                        android:gravity="center"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:id="@+id/dibuat_oleh"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text="@string/tv_mata_pelajaran"
                            android:gravity="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:id="@+id/mapel_pesan"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:text="@string/tv_anak"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:id="@+id/anak"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:text="@string/tv_kelas"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:id="@+id/kelas_pesan"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tabel_border"
                            android:padding="13dip"
                            android:text="@string/tv_pesan"
                            android:gravity="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/tabel_border"
                        android:padding="13dip"
                        android:id="@+id/isi_pesan"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </TableRow>
            </TableLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/btn_balas"
                android:layout_width="200dp"
                android:layout_margin="10dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                app:cardCornerRadius="15dp"
                app:layout_collapseMode="pin"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangel"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/btn_balas_pesan"
                        android:textColor="@color/ic_logo_background"
                        android:textSize="20sp"
                        android:gravity="center"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>