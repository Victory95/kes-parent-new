<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.MenuUtama"
    tools:showIn="@layout/app_bar_menu_utama">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/customCarouselView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="6dp"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="70dp" />
                </LinearLayout>
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="339dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_profile"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_student"
                            android:text="Profil" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="#000"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/btn_jadwal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_jadwal" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="#000"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/btn_jadwal_ujian"
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_laboratory" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:text="Profil"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Jadwal Pelajaran"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Jadwal Ujian"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.4"
                            android:background="#fff" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="#000"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#fff" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="#000"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#fff" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="#000"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.6"
                            android:background="#fff"
                            android:gravity="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_absen"
                            android:layout_width="114dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_absen"
                            android:text="Profil" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="#000"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/btn_tugas_anak"
                            android:layout_width="116dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_tugas" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="#000"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/btn_rapor"
                            android:layout_width="116dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_raport" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:text="Absensi Anak"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Tugas Anak"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Rapor Anak"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.4"
                            android:background="#fff" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="#000"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#fff" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="#000"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#fff" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="#000"
                            android:gravity="center" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.6"
                            android:background="#fff"
                            android:gravity="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_kalender"
                            android:layout_width="114dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_kalender"
                            android:text="Profil" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#000"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/btn_pesan"
                            android:layout_width="116dp"
                            android:layout_height="90dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_pesan" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#000"
                            android:gravity="center" />

                        <ImageView
                            android:layout_width="116dp"
                            android:layout_height="90dp"
                            android:layout_weight="1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:text="Kalender Kelas"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"

                            android:gravity="center" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Pesan"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textAlignment="center" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>


        </ScrollView>
</RelativeLayout>