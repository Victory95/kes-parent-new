<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="?attr/actionButtonStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-347dp"
        android:layout_marginBottom="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="28dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/titleagenda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biologi"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/deskripsiagenda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Hari Buruh International"
                        android:textSize="13sp"

                        />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:layout_marginLeft="30dp"

    >
    <ImageView
        android:id="@+id/pita"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="right|end|top"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-155dp"
        android:layout_marginRight="-7dp"
        android:src="@drawable/ic_ulangan_harian"
        android:gravity="center|top"
        android:paddingTop="1dp"
        android:paddingRight="13dp"
        android:text="Ulangan Harian"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/judulagenda"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginEnd="150dp"
        android:layout_gravity="right|end|top"
        android:gravity="center|top"
        android:paddingTop="12dp"
        android:paddingLeft="-22dp"
        android:paddingRight="40dp"
        android:text="Ulangan Harian"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="visible" />
</LinearLayout>



</LinearLayout>