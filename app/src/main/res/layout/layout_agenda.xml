<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="?attr/actionButtonStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:focusable="true"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="-145dp"
        android:layout_marginBottom="15dp"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biologi"
                    android:id="@+id/titleagenda"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hari Buruh International"
                    android:textSize="13sp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/deskripsiagenda"


                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>


    <TextView
        android:id="@+id/judulagenda"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="right|end|top"
        android:layout_marginEnd="-10dp"
        android:layout_marginRight="-7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_ulangan_harian"
        android:gravity="center|top"
        android:paddingTop="7dp"
        android:paddingLeft="8dp"
        android:textColor="@android:color/white"
        android:text="Ulangan Harian"
        android:textSize="17sp"
        android:visibility="visible"
        />



</LinearLayout>