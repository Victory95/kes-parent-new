<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CameraScanning">


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:layout_centerVertical="true"
            android:id="@+id/sv_transparent_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <SurfaceView
            android:layout_centerVertical="true"
            android:id="@+id/sv_camera_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.CardView
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="#17000000"
            app:cardCornerRadius="25dp"
            android:layout_margin="10dp"
            app:cardElevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="15dp"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/iv_reload"
                android:src="@drawable/ic_reload"
                android:layout_width="80dp"
                android:layout_height="50dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="#17000000"
            app:cardCornerRadius="25dp"
            android:layout_margin="10dp"
            app:cardElevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="15dp"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/iv_flashlight"
                android:src="@drawable/ic_flash"
                android:layout_width="80dp"
                android:layout_height="50dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:text="hawudjfwdj"
            android:layout_marginBottom="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:digits="0123456789"
            android:inputType="phone"
            android:id="@+id/tv_result"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_photo_camera"
        android:padding="35dp"
        android:background="#313131"
        android:layout_weight="4"
        android:src="@drawable/ic_photo_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>