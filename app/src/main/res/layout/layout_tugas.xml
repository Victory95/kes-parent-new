<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:shrinkColumns="1"
            android:stretchColumns="1">
        <!-- Row 3 with 2 columns -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:background="@drawable/tabel_ujian"
                android:padding="13dip"
                android:text="Detail"
                android:gravity="center"
                android:textColor="@color/ic_logo_background" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/tabel_ujian"
                android:padding="13dip"
                android:text="Keterangan"
                android:gravity="center"
                android:textColor="@color/ic_logo_background" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text="Tanggal"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tanggal_tugas"
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text=""
                android:gravity="center"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text="Mata Pelajaran"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/mapel_tugas"
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text=""
                android:gravity="center"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text="Tipe"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/type_tugas"
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text=""
                android:gravity="center"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/tabel_border"
                    android:padding="13dip"
                    android:text="Deskripsi"
                    android:gravity="center"
                    android:textColor="#000000" />
            </LinearLayout>


            <TextView
                android:id="@+id/desc_tugas"
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text=""
                android:gravity="center"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:text="Guru"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/guru_tugas"
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:layout_weight="1"
                android:text="Nilai"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/nilai_tugas"
                android:layout_weight="1"
                android:background="@drawable/tabel_border"
                android:padding="13dip"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />
        </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>