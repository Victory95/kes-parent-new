<LinearLayout android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="false"
    android:id="@+id/dragView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="#f0f0f0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_up_arrow"
            android:id="@+id/arrowF"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Lihat Sekolah Per Provinsi"
            android:textAlignment="center"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/jenis_kelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/sma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMA"
            android:textSize="20dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"/>

        <RadioButton
            android:id="@+id/smk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMK"
            android:textSize="20dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"/>

        <RadioButton
            android:id="@+id/smp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMP"
            android:textSize="20dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"/>

        <RadioButton
            android:id="@+id/sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SD"
            android:textSize="20dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"/>

    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:background="#000000"
        />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Pilih Provinsi"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <Spinner
            android:id="@+id/sp_provinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edt_bg_selector_black"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TampilProv"
        android:text="Tampilkan"
        android:textColor="#ffffff"
        android:clickable="true"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectang_line"
        android:focusable="true" />


</LinearLayout>