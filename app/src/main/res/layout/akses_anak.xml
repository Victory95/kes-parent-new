<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:id="@+id/lay_akses_anak"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="55dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_val_nama_kodes"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:text="@string/validate_nama_kode_sekolah"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_red_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_val_nama_kodes_join"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:textSize="12sp"
                        android:textColor="@color/textColor_Grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/til_nik_niora_siswa"
                                android:paddingTop="28dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginRight="40dp"
                                android:textColorHint="@color/default_textHint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/et_nik_niora_siswa"
                                    android:paddingBottom="6dp"
                                    android:paddingTop="10dp"
                                    android:textSize="16sp"
                                    android:background="@drawable/edt_bg_selector"
                                    android:textColor="@color/default_textColor"
                                    android:inputType="textCapCharacters|textNoSuggestions"
                                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM1234567890"
                                    android:imeOptions="actionSearch"
                                    android:singleLine="true"
                                    android:hint="@string/et_nama_nik_niora"
                                    android:maxLength="16"
                                    android:theme="@style/TextLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="Autofill" />
                            </android.support.design.widget.TextInputLayout>

                            <LinearLayout
                                android:background="@drawable/rectangle_line_blue"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginRight="40dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:padding="10dp"
                                    android:src="@drawable/ic_info"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    tools:ignore="ContentDescription" />
                                <TextView
                                    android:id="@+id/tv_info_nama_anak"
                                    android:paddingTop="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/textColor_Grey"
                                    android:textSize="12sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    tools:ignore="RtlHardcoded,RtlSymmetry" />
                            </LinearLayout>
                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="30dp"
                            android:layout_marginRight="33dp"
                            android:layout_marginTop="25dp"
                            android:layout_alignParentRight="true"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            tools:ignore="RtlHardcoded">

                            <ImageView
                                android:padding="16dp"
                                android:layout_gravity="center"
                                android:id="@+id/iv_camera"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_camera"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="ContentDescription" />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="@string/tv_nama_anak_info"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/textColor_Grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_nama_anak"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:text="@string/tv____"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:id="@+id/btn_minta_kode_akses"
                        android:layout_marginTop="40dp"
                        android:text="@string/btn_minta_kode_akses"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="50dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.arlib.floatingsearchview.FloatingSearchView
                    android:id="@+id/floating_search_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:floatingSearch_hintTextColor="@color/default_textHint"
                    app:floatingSearch_searchBarMarginLeft="36dp"
                    app:floatingSearch_searchBarMarginRight="36dp"
                    app:floatingSearch_dimBackground="@android:color/transparent"
                    app:floatingSearch_searchHint="@string/et_nama_kode_sekolah"
                    app:floatingSearch_suggestionsListAnimDuration="250"
                    app:floatingSearch_showSearchKey="true"
                    app:floatingSearch_dismissFocusOnItemSelection="true"
                    app:floatingSearch_leftActionMode="showSearch"
                    app:floatingSearch_showVoiceInput="true"
                    app:floatingSearch_close_search_on_keyboard_dismiss="true"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>