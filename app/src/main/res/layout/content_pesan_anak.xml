<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Anak.PesanAnak"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pesan"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pullToRefresh">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tablayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_nama_depan"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="30dp"
                        android:theme="@style/TextLabelView"
                        android:layout_marginLeft="30dp">

                        <EditText
                            android:theme="@style/TextLabel"
                            android:id="@+id/et_dari"
                            android:hint="Dari"
                            android:textSize="16sp"
                            android:inputType="date"
                            android:background="@drawable/edt_bg_selector_kes"
                            android:paddingBottom="6dp"
                            android:text="2018-12-30"
                            android:textColor="@color/colorPrimary"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />Nama Depan
                    </android.support.design.widget.TextInputLayout>Nama Depan

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_Email"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:layout_marginRight="30dp"
                        android:theme="@style/TextLabelView"
                        android:layout_marginLeft="30dp">

                        <EditText
                            android:theme="@style/TextLabel"
                            android:id="@+id/et_sampai"
                            android:hint="Sampai"
                            android:textSize="16sp"
                            android:inputType="date"
                            android:background="@drawable/edt_bg_selector_kes"
                            android:paddingBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />E-mail
                    </android.support.design.widget.TextInputLayout>E-mail

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="bottom"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="5dp"
                        android:id="@+id/btn_go">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/ic_logo_background"
                            android:text="Go"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/no_pesan"
                android:gravity="center"
                android:text="Tidak ada pesan masuk"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recycle_pesan">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>