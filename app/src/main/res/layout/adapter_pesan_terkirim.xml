<?xml version="1.0" encoding="utf-8"?>
<com.github.florent37.shapeofview.shapes.RoundRectView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:shape_roundRect_borderColor="@color/colorPrimary"
    app:shape_roundRect_borderWidth="1dp"
    app:shape_roundRect_bottomRightRadius="1dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:layout_gravity="center"
                app:shape_circle_borderColor="@color/colorPrimary"
                app:shape_circle_borderWidth="0.5dp"
                android:id="@+id/profilanak">

                <ImageView
                    android:id="@+id/image_guru_terkirim"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/guru"
                    />

            </com.github.florent37.shapeofview.shapes.CircleView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="33.3"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pengirim"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:id="@+id/Tvpengirim"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/Tvsubject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="Subject"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Your message............"
                android:layout_marginLeft="15dp"
                android:textSize="13sp"
                android:singleLine="true"
                android:id="@+id/Tvpesan"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.00"
                    android:layout_marginRight="15dp"
                    android:id="@+id/Tv_tanggal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.00"
                        android:layout_marginRight="15dp"
                        android:id="@+id/Tvwaktu"

                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</com.github.florent37.shapeofview.shapes.RoundRectView>